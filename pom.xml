    </dependency>

    <!-- JAVAX-MAIL DEPENDENCIES -->
    <dependency>
      <groupId>javax.mail</groupId>
      <artifactId>mail</artifactId>
      <version>${javax.mail.version}</version>
      <optional>true</optional>
    </dependency>

    <!-- LUCENE DEPENDENCIES -->
